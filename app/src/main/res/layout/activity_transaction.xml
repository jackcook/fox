<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin" android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="20dp" android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#f8f8f8">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shadow"
        android:paddingTop="13dp"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        android:paddingBottom="18dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You received 0.00352 BTC"
            android:layout_gravity="start|center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$0.93 USD"
            android:layout_gravity="end|center_vertical" />
    </FrameLayout>
    
    <View
        android:layout_width="fill_parent"
        android:layout_height="20dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shadow"
        android:paddingTop="3dp"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        android:paddingBottom="8dp">

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="42dp">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time"
                android:layout_gravity="start|center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015-08-06 @ 02:59:23"
                android:layout_gravity="end|center_vertical" />
        </FrameLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#ebebeb" />

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="42dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirmations"
                android:layout_gravity="start|center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1418"
                android:layout_gravity="end|center_vertical" />
        </FrameLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#ebebeb" />

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="42dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transaction Fee"
                android:layout_gravity="start|center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0001 BTC"
                android:layout_gravity="end|center_vertical" />
        </FrameLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#ebebeb" />

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="42dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:layout_gravity="start|center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirmed"
                android:layout_gravity="end|center_vertical" />
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
